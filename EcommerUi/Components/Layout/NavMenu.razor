@inject IJSRuntime JS
@inject NavigationManager Nav

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">EcommerUi</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        @if (hasToken)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="categories">
                    <span class="bi bi-tags-fill-nav-menu" aria-hidden="true"></span> Categories
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="products">
                    <span class="bi bi-box-seam-fill-nav-menu" aria-hidden="true"></span> Products
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <button class="nav-link btn btn-link text-start w-100" @onclick="HandleLogout" @onclick:stopPropagation>
                    <span class="bi bi-box-arrow-right-nav-menu" aria-hidden="true"></span> Logout
                </button>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Login
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    bool hasToken;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var token = await JS.InvokeAsync<string>("api.getToken");
            hasToken = !string.IsNullOrEmpty(token);
            StateHasChanged();
        }
    }

    private async Task HandleLogout()
    {
        await JS.InvokeVoidAsync("api.clearToken");
        Nav.NavigateTo("/login", true);
    }
}

