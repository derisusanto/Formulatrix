@page "/categories"
@inject IJSRuntime JS
@inject NavigationManager Nav

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Category Management</h1>
    </div>

    @if (!string.IsNullOrEmpty(errMsg)) {
        <div class="alert alert-danger">@errMsg</div>
    }

    <div class="row">
        <!-- Form Section -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    @(editCat.Id == Guid.Empty ? "Create New Category" : "Edit Category")
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Category Name</label>
                        <input @bind="editCat.Name" class="form-control" placeholder="Enter name..." />
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-primary w-100" @onclick="SaveCat">@(editCat.Id == Guid.Empty ? "Create" : "Update")</button>
                        @if (editCat.Id != Guid.Empty) {
                            <button class="btn btn-secondary w-100" @onclick="CancelEdit">Cancel</button>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- List Section -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    Existing Categories
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light"><tr><th>Name</th><th class="text-end px-4">Actions</th></tr></thead>
                        <tbody>
                            @foreach (var c in cats) {
                                <tr>
                                    <td class="align-middle px-4">@c.Name</td>
                                    <td class="text-end px-4">
                                        <button class="btn btn-sm btn-outline-info me-1" @onclick="() => EditCat(c)">Edit</button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteCat(c.Id)">Del</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    List<Category> cats = new();
    Category editCat = new();
    string? errMsg;

    protected override async Task OnAfterRenderAsync(bool firstRender) {
        if (firstRender) {
            var token = await JS.InvokeAsync<string>("api.getToken");
            if (string.IsNullOrEmpty(token)) { Nav.NavigateTo("/login"); return; }
            await Load();
            StateHasChanged();
        }
    }

    async Task Load() {
        try {
            var res = await JS.InvokeAsync<List<Category>>("api.fetch", "Category");
            cats = res ?? new();
            StateHasChanged();
        } catch (Exception ex) { errMsg = ex.Message; }
    }

    void EditCat(Category c) { editCat = new(){Id=c.Id, Name=c.Name}; errMsg = null; }
    void CancelEdit() { editCat = new(); errMsg = null; }

    async Task SaveCat() {
        if (string.IsNullOrWhiteSpace(editCat.Name)) { errMsg = "Name is required"; return; }
        errMsg = null;
        try {
            var options = new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = System.Text.Json.JsonNamingPolicy.CamelCase };
            var json = System.Text.Json.JsonSerializer.Serialize(editCat, options);
            if (editCat.Id == Guid.Empty) 
                await JS.InvokeVoidAsync("api.fetch", "Category", new { method = "POST", body = json }); 
            else 
                await JS.InvokeVoidAsync("api.fetch", $"Category/{editCat.Id}", new { method = "PUT", body = json });
            editCat = new(); await Load();
        } catch (Exception ex) { errMsg = ex.Message; }
    }
    async Task DeleteCat(Guid id) { 
        try {
            await JS.InvokeVoidAsync("api.fetch", $"Category/{id}", new { method = "DELETE" }); 
            await Load(); 
        } catch (Exception ex) { errMsg = ex.Message; }
    }
}
